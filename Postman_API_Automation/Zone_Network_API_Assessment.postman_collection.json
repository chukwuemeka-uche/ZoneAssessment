							"\r",
							"pm.test(\"Verify that response body contains bookingid\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(\"bookingid\");\r",
							"});\r",
							"\r",
							"const jsonData = pm.response.json();\r",
							"\r",
							"//Random number generator\r",
							"function getRandomNumber(min, max) {\r",
							"return Math.floor(Math.random() * (max - min)) + min;\r",
							"}\r",
							"\r",
							"const randomNumber = getRandomNumber(1, 10)\r",
							"const bookingId = jsonData[randomNumber].bookingid\r",
							"\r",
							"//bookingid variable is updated with the outcome of the random number generator, it can be overriden by the bookingid in CreateBooking end-point\r",
							"pm.collectionVariables.set(\"bookingid\", bookingId);"
						],
